    "repository": {
        "type": "git",
        "url": "https://github.com/finos/perspective"
    },
    "engines": {
        "node": ">=8.12.0"
    },
    "workspaces": [
        "packages/*",
        "examples/*"
    ],
    "devDependencies": {
        "@babel/cli": "^7.8.4",
        "@babel/core": "^7.8.4",
        "@babel/plugin-proposal-decorators": "^7.8.3",
        "@babel/plugin-proposal-optional-chaining": "^7.8.3",
        "@babel/plugin-transform-for-of": "^7.8.4",
        "@babel/plugin-transform-runtime": "^7.8.3",
        "@babel/plugin-proposal-class-properties": "^7.8.3",
        "@babel/polyfill": "^7.8.3",
        "@babel/preset-env": "^7.8.4",
        "arraybuffer-loader": "^1.0.2",
        "babel-eslint": "^10.0.3",
        "babel-jest": "^25.1.0",
        "babel-plugin-lodash": "^3.3.4",
        "babel-plugin-transform-custom-element-classes": "^0.1.0",
        "babel-polyfill": "^6.26.0",
        "base64-font-loader": "0.0.4",
        "clean-css-loader": "^1.1.0",
        "core-js": "^3.6.4",
        "cpx": "^1.5.0",
        "css-loader": "^0.28.7",
        "dotenv": "^8.1.0",
        "eslint": "^6.6.0",
        "eslint-config-prettier": "^3.0.1",
        "eslint-plugin-markdown": "^1.0.2",
        "eslint-plugin-prettier": "^2.6.2",
        "file-loader": "^2.0.0",
        "html-loader": "^0.5.1",
        "html-loader-jest": "^0.2.1",
        "inquirer": "^7.0.0",
        "jest": "^25.1.0",
        "jest-junit": "^10.0.0",
        "lerna": "^2.11.0",
        "less": "^3.9.0",
        "less-loader": "^4.1.0",
        "mini-css-extract-plugin": "^0.7.0",
        "mkdirp": "^0.5.1",
        "npm-run-all": "^4.1.3",
        "postcss": "^7.0.2",
        "pre-commit": "^1.2.2",
        "prettier": "^1.19.1",
        "rimraf": "^2.6.2",
        "sinon": "^7.3.1",
        "source-map-explorer": "^2.0.1",
        "style-loader": "^0.18.2",
        "term-img": "^4.1.0",
        "webpack": "^4.31.0",
        "webpack-cli": "^3.3.2",
        "webpack-fix-style-only-entries": "^0.4.0"
    },
    "resolutions": {
        "**/jest": "^25.1.0",
        "**/write-file-atomic": "2.4.1",
        "**/webpack": "^4.31.0",
        "**/webpack-cli": "^3.3.2",
        "**/webpack-dev-server": "3.9.0",
        "**/react": "16.8.6",
        "**/react-dom": "16.8.6"
    },
    "pre-commit": [
        "precommit"
    ],
    "scripts": {
        "build": "node scripts/build.js",
        "build_js": "node scripts/build_js.js",
        "build,test": "npm run --silent build && npm run --silent test",
        "setup": "node scripts/setup.js",
        "test": "node scripts/test.js",
        "test_js": "node scripts/test_js.js",
        "clean": "node scripts/clean.js",
        "precommit": "npm run lint",
        "lint": "npm-run-all lint:*",
        "lint:eslint": "eslint \"packages/*/src/**/*.js\" \"packages/*/test/**/*.js\" \"examples/*/*.js\"",
        "lint_:tslint": "eslint \"packages/*/src/**/*.ts\" \"packages/*/test/**/*.ts\" \"examples/*/*.ts\"",
        "fix:es": "npm run lint:eslint -- --fix",
        "fix:less": "prettier --tab-width 4 --write packages/**/src/less/*.less",
        "fix:html": "html-beautify packages/**/src/html/*.html -r",
        "fix:json": "prettier --tab-width 4 --write **/package.json",
        "fix": "npm-run-all --silent fix:*",
        "toggle_puppeteer": "node scripts/toggle_puppeteer.js"
    }
}
